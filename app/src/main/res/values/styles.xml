    <style name="customButtonWhiteStyle" >
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:background">@drawable/secondary_button_background</item>
    </style>





    <style name="customEditbox" >
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/grey1</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/app_color</item>
        <item name="hintTextColor">@color/grey1</item>

       <!-- <item name="android:background">@drawable/secondary_button_background</item>-->
    </style>



    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="roundedImageView" parent="">
       <item name="cornerRadius">30dp</item>
    </style>


    <!--    <style name="customProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
            <item name="android:progressDrawable">@drawable/custom_progress_horizontal</item>
        </style>-->

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="MyMaterialThemeSeekbar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Add attributes here -->

    </style>



    <style name="FullScreenDialogTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">true</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@color/colorAccent</item>

    </style>


    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/white</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>






    <style name="BottomSheetDialogThemeBlack" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheetBlack" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/white</item>
    </style>

    <style name="BaseBottomSheetDialogBlack" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>


    <style name="NonDraggableBottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="behavior_draggable">false</item>
    </style>




</resources>
