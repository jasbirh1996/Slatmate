<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="TextOnShadow" parent="">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="customButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:background">@drawable/custum_button_background</item>
    </style>

    <style name="primaryButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:background">@drawable/primary_button_background</item>
    </style>

    <style name="customButtonWhiteStyle" >
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:background">@drawable/secondary_button_background</item>
    </style>

    <style name="customEditbox" >
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/grey1</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/app_color</item>
       <!-- <item name="android:background">@drawable/secondary_button_background</item>-->
    </style>



    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
