<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivAbout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/iconly_light_outline_activity"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       android:tint="#656565"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
       />


    <TextView
        android:id="@+id/about_us_setting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="@+id/ivAbout"
        app:layout_constraintBottom_toBottomOf="@+id/ivAbout"
        app:layout_constraintStart_toEndOf="@+id/ivAbout"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Contact Us"
        android:paddingVertical="@dimen/_5sdp"
        android:drawableEnd="@drawable/menu_arrow_icon"
        android:layout_marginEnd="@dimen/_10sdp"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="@+id/about_us_setting"
        app:layout_constraintTop_toBottomOf="@+id/about_us_setting"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>