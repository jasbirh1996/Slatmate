                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Condition 1"
                        android:textColor="@color/black_text_splash"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean imperdiet condimentum est, non faucibus odio consequat eu. Morbi nisi urna, tempor ac augue et, finibus luctus nulla. Nulla facilisi. Quisque nec"
                        android:textColor="@color/grey_dark_color"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/condition1" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/condition2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Condition 1"
                        android:textColor="@color/black_text_splash"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text1" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean imperdiet condimentum est, non faucibus odio consequat eu. Morbi nisi urna, tempor ac augue et, finibus luctus nulla. Nulla facilisi. Quisque nec"
                        android:textColor="@color/grey_dark_color"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/condition2" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/condition3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Condition 1"
                        android:textColor="@color/black_text_splash"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text2" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean imperdiet condimentum est, non faucibus odio consequat eu. Morbi nisi urna, tempor ac augue et, finibus luctus nulla. Nulla facilisi. Quisque nec"
                        android:textColor="@color/grey_dark_color"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/condition3" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/condition4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Condition 1"
                        android:textColor="@color/black_text_splash"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text3" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean"
                        android:textColor="@color/grey_dark_color"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/condition4" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/condition5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Condition 1"
                        android:textColor="@color/black_text_splash"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text4" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text5"
                        android:layout_width="wrap_content"
