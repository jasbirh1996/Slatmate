<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10">

   <com.google.android.material.imageview.ShapeableImageView
       android:id="@+id/ivMusicImage"
       android:layout_width="53dp"
       android:layout_height="53dp"
       android:adjustViewBounds="true"
       android:src="@drawable/app_logo"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:shapeAppearanceOverlay="@style/roundedimageViewRectangel" />

   <androidx.appcompat.widget.AppCompatImageView
       android:layout_width="10dp"
       android:layout_height="@dimen/dp_10"
       android:src="@drawable/ic_music_play_icon"
       app:layout_constraintBottom_toBottomOf="@+id/ivMusicImage"
       app:layout_constraintEnd_toEndOf="@+id/ivMusicImage"
       app:layout_constraintStart_toStartOf="@+id/ivMusicImage"
       app:layout_constraintTop_toTopOf="@+id/ivMusicImage" />


   <androidx.appcompat.widget.AppCompatTextView
       android:id="@+id/tvMusicName"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="8dp"
       android:layout_marginTop="4dp"
       android:text="Kimberly Evans"
       android:fontFamily="@font/poppins"
       android:textSize="15sp"
       android:textColor="@color/black"
       app:layout_constraintStart_toEndOf="@+id/ivMusicImage"
       app:layout_constraintTop_toTopOf="parent" />


   <androidx.appcompat.widget.AppCompatTextView
       android:id="@+id/tvMusicDescription"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="8dp"
       android:fontFamily="@font/poppins"
       android:text="Kimberly Evans"
       android:textColor="@color/custom_button_grey"
       android:textSize="13sp"
       app:layout_constraintBottom_toBottomOf="@+id/ivMusicImage"
       app:layout_constraintStart_toEndOf="@+id/ivMusicImage"
       app:layout_constraintTop_toBottomOf="@+id/tvMusicName" />


   <androidx.appcompat.widget.AppCompatImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginEnd="16dp"
       android:src="@drawable/ic_audio_saved"
       app:tint="@color/custom_button_color_grey_audio_saved"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>


</layout>